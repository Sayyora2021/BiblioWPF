<Window x:Class="BiblioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions> 
        <Button x:Name="btLivre" Content="CRUD Livre" Margin="50" Grid.Row="0" Click="btLivre_Click" />
        <Button x:Name="btPersonne" Content="CRUD Personne" Margin="50" Grid.Row="1" Click="btPersonne_Click" />
        <Button x:Name="btDomaine" Content="CRUD Domaine" Margin="50" Grid.Row="2" Click="btDomaine_Click"/>
    </Grid>

</Window>
